<h1>New book</h1>
<% if book.errors.any? %>
  <div>
    <ul style="color: red">
      <h3><%= book.errors.count %> errors prohibited this obj from being saved</h3>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(book) do |f| %>

  <div class="field row">
    <%= f.label :title %></br>
    <%= f.text_field :title, class: "col-xs-12",id: :book_title %>
  </div>

  <div class="field row">
    <%= f.label :Opinion %></br>
    <%= f.text_area :body, class: "col-xs-12", id: :book_body %>
  </div></br>

  <div class="creste">
    <%= f.submit "Create Book" , class:"btn btn-primary btn-block" %>
  </div>
<% end %>


